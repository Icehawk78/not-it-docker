<h1>Listing player_groups</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>Player</th>
      <th>Bank</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player_groups.each do |player_group| %>
      <tr>
        <td><%= player_group.group.name %></td>
        <td><%= player_group.player.name %></td>
        <td><%= player_group.bank %></td>
        <td><%= link_to 'Show', player_group %></td>
        <td><%= link_to 'Edit', edit_player_group_path(player_group) %></td>
        <td><%= link_to 'Destroy', player_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

