<p id="notice"><%= notice %></p>

<p>
  <strong>Group:</strong>
  <%= @trip.group.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @trip.description %>
</p>

<p>
  <strong>Participants:</strong>
  <table>
    <thead>
      <tr>
        <td>Player</td>
        <td>Result</td>
      </tr>
    </thead>
    <tbody>
      <% @trip.rolls.each do |roll| %>
        <tr>
          <td><%= roll.player.name %></td>
          <td><%= roll.result %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>

<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>
